<UserControl x:Class="AudioWorks.UI.Modules.Apple.Views.AlacEncoderSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.Resources>
        <Style TargetType="Label"
               x:Key="Label"
               BasedOn="{StaticResource {x:Type Label}}">
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="Margin"
                    Value="0,0,0,9"/>
        </Style>
        <Style TargetType="mahapps:NumericUpDown"
               x:Key="NumericUpDown"
               BasedOn="{StaticResource {x:Type mahapps:NumericUpDown}}">
            <Setter Property="mahapps:TextBoxHelper.SelectAllOnFocus"
                    Value="True"/>
            <Setter Property="Margin"
                    Value="0,0,0,24"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <Label Content="Padding (in bytes)"
               Style="{StaticResource Label}"/>
        <mahapps:NumericUpDown Value="{Binding Padding}"
                               Minimum="0"
                               Maximum="16777216"
                               Style="{StaticResource NumericUpDown}"/>
    </StackPanel>

</UserControl>

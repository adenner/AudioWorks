<UserControl x:Class="AudioWorks.UI.Views.EditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
        <Style TargetType="Label"
               x:Key="EntryLabel"
               BasedOn="{StaticResource {x:Type Label}}">
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="Margin"
                    Value="0,0,0,5"/>
        </Style>
        <Style TargetType="TextBox"
               x:Key="EntryTextBox"
               BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Margin"
                    Value="0,0,0,11"/>
            <Setter Property="Width"
                    Value="300"/>
            <Setter Property="mahapps:TextBoxHelper.SelectAllOnFocus"
                    Value="True"/>
        </Style>
        <Style TargetType="mahapps:NumericUpDown"
               x:Key="EntryNumeric"
               BasedOn="{StaticResource {x:Type mahapps:NumericUpDown}}">
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
            <Setter Property="Width"
                    Value="84"/>
            <Setter Property="Margin"
                    Value="0,0,0,11"/>
            <Setter Property="mahapps:TextBoxHelper.SelectAllOnFocus"
                    Value="True"/>
        </Style>
        <Style TargetType="mahapps:ToggleSwitch"
               x:Key="EntryToggle"
               BasedOn="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
            <Setter Property="VerticalAlignment"
                    Value="Top"/>
            <Setter Property="Margin"
                    Value="5,0,0,0"/>
            <Setter Property="OnLabel"
                    Value="{x:Null}"/>
            <Setter Property="OffLabel"
                    Value="{x:Null}"/>
        </Style>
        <Style TargetType="Button"
               x:Key="CommandButton"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Margin"
                    Value="0,0,7,0"/>
            <Setter Property="Width"
                    Value="75"/>
        </Style>
    </UserControl.Resources>

    <Border BorderThickness="11">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.ColumnSpan="5"
                   Style="{StaticResource EntryLabel}">Track #:</Label>
            <mahapps:NumericUpDown Grid.Row="1"
                     Grid.Column="0"                   
                     Style="{StaticResource EntryNumeric}"
                     Value="{Binding TrackNumber}"
                     IsEnabled="{Binding TrackNumberIsCommon}"
                     Minimum="1"
                     Maximum="99"
                     StringFormat="00"/>
            <mahapps:ToggleSwitch Grid.Row="1"
                                  Grid.Column="1"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding TrackNumberIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>
            <Label Grid.Row="1"
                   Grid.Column="2"
                   Padding="0"
                   Margin="5,0,5,11"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center">of</Label>
            <mahapps:NumericUpDown Grid.Row="1"
                                   Grid.Column="3"                   
                                   Style="{StaticResource EntryNumeric}"
                                   Value="{Binding TrackCount}"
                                   IsEnabled="{Binding TrackCountIsCommon}"
                                   Minimum="1"
                                   Maximum="99"
                                   StringFormat="00"/>
            <mahapps:ToggleSwitch Grid.Row="1"
                                  Grid.Column="4"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding TrackCountIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>

            <Label Grid.Row="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="5"
                   Style="{StaticResource EntryLabel}">Title:</Label>
            <TextBox Grid.Row="3"
                     Grid.Column="0"
                     Grid.ColumnSpan="6"
                     Style="{StaticResource EntryTextBox}"
                     Text="{Binding SongTitle, ValidatesOnNotifyDataErrors=True}"
                     IsEnabled="{Binding SongTitleIsCommon}"/>
            <mahapps:ToggleSwitch Grid.Row="3"
                                  Grid.Column="6"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding SongTitleIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>

            <Label Grid.Row="4"
                   Grid.Column="0"
                   Grid.ColumnSpan="5"
                   Style="{StaticResource EntryLabel}">Artist:</Label>
            <TextBox Grid.Row="5"
                     Grid.Column="0"
                     Grid.ColumnSpan="6"
                     Style="{StaticResource EntryTextBox}"
                     Text="{Binding Artist, ValidatesOnNotifyDataErrors=True}"
                     IsEnabled="{Binding ArtistIsCommon}"/>
            <mahapps:ToggleSwitch Grid.Row="5"
                                  Grid.Column="6"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding ArtistIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>

            <Label Grid.Row="6"
                   Grid.Column="0"
                   Grid.ColumnSpan="5"
                   Style="{StaticResource EntryLabel}">Album Artist:</Label>
            <TextBox Grid.Row="7"
                     Grid.Column="0"
                     Grid.ColumnSpan="6"
                     Style="{StaticResource EntryTextBox}"
                     Text="{Binding AlbumArtist, ValidatesOnNotifyDataErrors=True}"
                     IsEnabled="{Binding AlbumArtistIsCommon}"/>
            <mahapps:ToggleSwitch Grid.Row="7"
                                  Grid.Column="6"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding AlbumArtistIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>

            <Label Grid.Row="8"
                   Grid.Column="0"
                   Grid.ColumnSpan="5"
                   Style="{StaticResource EntryLabel}">Composer:</Label>
            <TextBox Grid.Row="9"
                     Grid.Column="0"
                     Grid.ColumnSpan="6"
                     Style="{StaticResource EntryTextBox}"
                     Text="{Binding Composer, ValidatesOnNotifyDataErrors=True}"
                     IsEnabled="{Binding ComposerIsCommon}"/>
            <mahapps:ToggleSwitch Grid.Row="9"
                                  Grid.Column="6"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding ComposerIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>

            <Label Grid.Row="10"
                   Grid.Column="0"
                   Grid.ColumnSpan="5"
                   Style="{StaticResource EntryLabel}">Album:</Label>
            <TextBox Grid.Row="11"
                     Grid.Column="0"
                     Grid.ColumnSpan="6"
                     Style="{StaticResource EntryTextBox}"
                     Text="{Binding Album, ValidatesOnNotifyDataErrors=True}"
                     IsEnabled="{Binding AlbumIsCommon}"/>
            <mahapps:ToggleSwitch Grid.Row="11"
                                  Grid.Column="6"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding AlbumIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>

            <Label Grid.Row="12"
                   Grid.Column="0"
                   Grid.ColumnSpan="5"
                   Style="{StaticResource EntryLabel}">Genre:</Label>
            <TextBox Grid.Row="13"
                     Grid.Column="0"
                     Grid.ColumnSpan="6"
                     Style="{StaticResource EntryTextBox}"
                     Text="{Binding Genre, ValidatesOnNotifyDataErrors=True}"
                     IsEnabled="{Binding GenreIsCommon}"/>
            <mahapps:ToggleSwitch Grid.Row="13"
                                  Grid.Column="6"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding GenreIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>

            <Label Grid.Row="14"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource EntryLabel}">Year:</Label>
            <mahapps:NumericUpDown Grid.Row="15"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Style="{StaticResource EntryNumeric}"
                                   Value="{Binding Year}"
                                   IsEnabled="{Binding YearIsCommon}"
                                   Minimum="1000"
                                   Maximum="9999"/>
            <mahapps:ToggleSwitch Grid.Row="15"
                                  Grid.Column="1"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding YearIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>

            <Label Grid.Row="16"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Style="{StaticResource EntryLabel}">Day:</Label>
            <mahapps:NumericUpDown Grid.Row="17"
                                   Grid.Column="0"                   
                                   Style="{StaticResource EntryNumeric}"
                                   Value="{Binding Day}"
                                   IsEnabled="{Binding DayIsCommon}"
                                   Minimum="1"
                                   Maximum="31"
                                   StringFormat="00"/>
            <mahapps:ToggleSwitch Grid.Row="17"
                                  Grid.Column="1"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding DayIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>
            <Label Grid.Row="16"
                   Grid.Column="3"
                   Grid.ColumnSpan="2"
                   Style="{StaticResource EntryLabel}">Month:</Label>
            <mahapps:NumericUpDown Grid.Row="17"
                                   Grid.Column="3"                   
                                   Style="{StaticResource EntryNumeric}"
                                   Value="{Binding Month}"
                                   IsEnabled="{Binding MonthIsCommon}"
                                   Minimum="1"
                                   Maximum="12"
                                   StringFormat="00"/>
            <mahapps:ToggleSwitch Grid.Row="17"
                                  Grid.Column="4"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding MonthIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>

            <Label Grid.Row="18"
                   Grid.Column="0"
                   Grid.ColumnSpan="5"
                   Style="{StaticResource EntryLabel}">Comment:</Label>
            <TextBox Grid.Row="19"
                     Grid.Column="0"
                     Grid.ColumnSpan="6"
                     Style="{StaticResource EntryTextBox}"
                     Text="{Binding Comment, ValidatesOnNotifyDataErrors=True}"
                     IsEnabled="{Binding CommentIsCommon}"/>
            <mahapps:ToggleSwitch Grid.Row="19"
                                  Grid.Column="6"
                                  Style="{StaticResource EntryToggle}"
                                  IsChecked="{Binding CommentIsCommon}"
                                  Visibility="{Binding IsMultiple, Converter={StaticResource VisibilityConverter}}"/>

            <StackPanel Grid.Row="20"
                        Grid.Column="0"
                        Grid.ColumnSpan="7"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Command="{Binding ApplyCommand}"
                        Style="{StaticResource CommandButton}">OK</Button>
                <Button IsCancel="True"
                        IsDefault="True"
                        Style="{StaticResource CommandButton}">Cancel</Button>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>

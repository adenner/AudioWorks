<UserControl x:Class="AudioWorks.UI.Views.FlacMetadataSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
             prism:ViewModelLocator.AutoWireViewModel="True">
    
    <GroupBox Header="Padding"
              VerticalAlignment="Center"
              Padding="11">
        <StackPanel>
            <mahapps:ToggleSwitch Header="Set a fixed padding size (in bytes)"
                                  IsChecked="{Binding ConfigurePadding}"
                                  Padding="0"
                                  Margin="0,0,0,11"/>
            <mahapps:NumericUpDown Value="{Binding Padding}"
                                   IsEnabled="{Binding ConfigurePadding, Mode=OneWay}"
                                   Minimum="0"
                                   Maximum="16777216"/>
        </StackPanel>
    </GroupBox>
    
</UserControl>
